<h1> Your Properties: </h1>
Red label = not available
<table class="table table-striped" border="0" style="width:100%" id="protable">
	<thead>
		<tr>
			<th>#</th>
			<th>Street Address</th>
			<th>Suite/Apt #</th>
			<th>Address Type</th>
			<th>City</th>
			<th>State</th>
			<th>Zip code</th>
			<th>Rent</th>
			<th>Current Resident</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% count = 1%>
		<% @properties.each do |pro| %>
		<% if  pro.vacancy == "No"%>
			<tr class="danger">
				<td><%= count %></td>
				<td><%= pro.address_one %></td>
				<td><%= pro.address_two %></td>
				<td><%= pro.addresstype %></td>
				<td><%= pro.city %></td>
				<td><%= pro.state %></td>
				<td><%= pro.zip_code %></td>
				<td>$<%= pro.rent %></td>
				<td><%= pro.resident_id %></td>
				<td>
					<div class="btn-group btn-group-xs" role="group" aria-label="...">
					  <div type="button" class="btn btn-default"><%= link_to "View", pro %></div>
					  <div type="button" class="btn btn-default"><%= link_to "Edit", edit_property_path(pro)%></div>
					  <div type="button" class="btn btn-default"><%= link_to "Delete", property_path(pro), method: :delete, data: { confirm: "Are you sure you want to delete this property?" }%></div>
					</div>
				</td>
				<% count+=1 %>
			</tr>
		<% else %>
			<tr>
				<td><%= count %></td>
				<td><%= pro.address_one %></td>
				<td><%= pro.address_two %></td>
				<td><%= pro.addresstype %></td>
				<td><%= pro.city %></td>
				<td><%= pro.state %></td>
				<td><%= pro.zip_code %></td>
				<td>$<%= pro.rent %></td>
				<td><%= pro.resident_id %></td>
				<td>
					<div class="btn-group btn-group-xs" role="group" aria-label="...">
					  <div type="button" class="btn btn-default"><%= link_to "View", pro %></div>
					  <div type="button" class="btn btn-default"><%= link_to "Edit", edit_property_path(pro)%></div>
					  <div type="button" class="btn btn-default"><%= link_to "Delete", property_path(pro), method: :delete, data: { confirm: "Are you sure you want to delete this property?" }%></div>
					</div>
				</td>
			<% count+=1 %>
			</tr>
		<% end %>
		<% end %>
	</tbody>
</table>

