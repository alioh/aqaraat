<h1> Your Properties: </h1>
Red label = not available
<table class="table table-striped" border="0" style="width:100%">
	<tr>
		<th>ID</th>
		<th><%= sortable "address_one", "Street Address" %></th>
		<th><%= sortable "address_two", "Suite/Apt #" %></th>
		<th><%= sortable "addresstype", "Address Type" %></th>
		<th><%= sortable "City" %></th>
		<th><%= sortable "State" %></th>
		<th><%= sortable "zip_code", "Zip code" %></th>
		<th><%= sortable "rent", "Monthly rent" %></th>
		<th><%= sortable "ID" , "Property ID#" %></th>
		<th>Action</th>
	</tr>
	<% count = 1%>
	<% @properties.each do |pro| %>
	<% if  pro.vacancy == "No"%>
		<tr class="danger">
			<td><%= count %></td>
			<td><%= pro.address_one %></td>
			<td><%= pro.address_two %></td>
			<td><%= pro.addresstype %></td>
			<td><%= pro.city %></td>
			<td><%= pro.state %></td>
			<td><%= pro.zip_code %></td>
			<td>$<%= pro.rent %></td>
			<td><%= pro.id %></td>
			<td>
				<div class="btn-group btn-group-xs" role="group" aria-label="...">
				  <div type="button" class="btn btn-default"><%= link_to "View", pro %></div>
				  <div type="button" class="btn btn-default"><%= link_to "Edit", edit_property_path(pro)%></div>
				  <div type="button" class="btn btn-default"><%= link_to "Delete", property_path(pro), method: :delete, data: { confirm: "Are you sure you want to delete this property?" }%></div>
				</div>
			</td>
			<% count+=1 %>
		</tr>
	<% else %>
	<tr>
		<td><%= count %></td>
		<td><%= pro.address_one %></td>
		<td><%= pro.address_two %></td>
		<td><%= pro.addresstype %></td>
		<td><%= pro.city %></td>
		<td><%= pro.state %></td>
		<td><%= pro.zip_code %></td>
		<td>$<%= pro.rent %></td>
		<td><%= pro.id %></td>
		<td>
			<div class="btn-group btn-group-xs" role="group" aria-label="...">
			  <div type="button" class="btn btn-default"><%= link_to "View", pro %></div>
			  <div type="button" class="btn btn-default"><%= link_to "Edit", edit_property_path(pro)%></div>
			  <div type="button" class="btn btn-default"><%= link_to "Delete", property_path(pro), method: :delete, data: { confirm: "Are you sure you want to delete this property?" }%></div>
			</div>
		</td>
		<% count+=1 %>
	</tr>
	<% end %>
<% end %>
</table>

<!-- <a class="btn btn-primary" href="/properties/new">Add new property</a> -->
<div class="form-actions">
	<%= link_to "Add new property", new_property_path, class: "btn btn-primary" %>
</div>

<h1> Your Properties Bills: </h1>
<table class="table table-striped" border="0" style="width:100%">
	<tr>
		<th><%= sortable2 "id", "ID#" %></th>
		<th><%= sortable2 "duedate", "Due Date" %></th>
		<th><%= sortable2 "billtype", "Bill Type" %></th>
		<th><%= sortable2 "status" %></th>
		<th><%= sortable2 "amount" %></th>
		<th><%= sortable2 "ID" , "Property ID#" %></th>
		<th>Action</th>
	</tr>
	<% count = 0%>
	<% @bills.each do |b| %>
	<% if b.user_id != current_user.id  %>
	
	<% elsif  b.status == "Unpaid" and b.duedate < Time.zone.now %>
	<% count = count + 1 %>
		<tr class="danger">
			<td><%= b.id %></td>
			<td><%= b.duedate %></td>
			<td><%= b.billtype %></td>
			<td><%= b.status %></td>
			<td>$<%= b.amount %></td>
			<td><%= b.property_id %></td>
			<td>
				<div class="btn-group btn-group-xs" role="group" aria-label="...">
				  <div type="button" class="btn btn-default"><%= link_to "View", b %></div>
				  <div type="button" class="btn btn-default"><%= link_to "Edit", edit_bill_path(b)%></div>
				  <div type="button" class="btn btn-default"><%= link_to "Delete", bill_path(b), method: :delete, data: { confirm: "Are you sure you want to delete this bill?" }%></div>
				</div>
			</td>
			<% count+=1 %>
		</tr>
	<% else %>
	<% count = count + 1 %>
	<tr>
		<td><%= b.id %></td>
		<td><%= b.duedate %></td>
		<td><%= b.billtype %></td>
		<td><%= b.status %></td>
		<td>$<%= b.amount %></td>
		<td><%= b.property_id %></td>
		<td>
			<div class="btn-group btn-group-xs" role="group" aria-label="...">
			  <div type="button" class="btn btn-default"><%= link_to "View", b %></div>
			  <div type="button" class="btn btn-default"><%= link_to "Edit", edit_bill_path(b)%></div>
			  <div type="button" class="btn btn-default"><%= link_to "Delete", bill_path(b), method: :delete, data: { confirm: "Are you sure you want to delete this bill?" }%></div>
			</div>
		</td>
		<% count+=1 %>
	</tr>
	<% end %>
<% end %>
<% if count == 0  %>
		<p> You dont have any bills </p>
<%end%>
</table>

