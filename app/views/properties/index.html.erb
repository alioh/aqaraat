<h1> Your Properties: </h1>
<br>

<table class="table table-striped" border="0" style="width:100%">
	<tr>
		<th>#</th>
		<th>Address One</th>
		<th>Address Two</th>
		<th>City</th>
		<th>State</th>
		<th>Zip code</th>
		<th>Monthly rent</th>
		<th>Action</th>
	</tr>

	<% @properties.each do |pro| %>

	<tr>
		<td><%= pro.id %></td>
		<td><%= pro.address_one %></td>
		<td><%= pro.address_two %></td>
		<td><%= pro.city %></td>
		<td><%= pro.state %></td>
		<td><%= pro.zip_code %></td>
		<td><%= pro.rent %></td>
		<td>
			<div class="btn-group btn-group-xs" role="group" aria-label="...">
			  <button type="button" class="btn btn-default"><%= link_to "View", pro %></button>
			  <button type="button" class="btn btn-default"><%= link_to "Edit", edit_property_path(pro)%></button>
			  <button type="button" class="btn btn-default"><%= link_to "Delete", property_path(pro), method: :delete, data: { confirm: "Are you sure you want to delete this property?" }%></button>
			</div>
		</td>
	</tr>

<br>
<% end %>
</table>

<!-- <a class="btn btn-primary" href="/properties/new">Add new property</a> -->
<div class="form-actions">
	<%= link_to "Add new property", new_property_path, class: "btn btn-primary" %>
</div>