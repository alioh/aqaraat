<h2>Edit your profile:</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horisontal"}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, :input_html => {:style=> 'width: 250px'} %>
  <%= f.input :email, :input_html => {:style=> 'width: 250px'} %>
  <%= f.input :password, :input_html => {:style=> 'width: 250px'} %>
  <%= f.input :password_confirmation, :input_html => {:style=> 'width: 250px'} %>
  <%= f.input :current_password, :input_html => {:style=> 'width: 250px'} %>

  <div class="form-actions">
    <%= f.submit "Update" , class: "btn btn-primary" %>
  </div>
<% end %>

<br>
<p><%= button_to "Delete my account", registration_path(resource_name), class: "btn btn-danger", data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
