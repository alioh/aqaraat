<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horisontal"}) do |f| %>

  <%= f.input :email, :input_html => {:style=> 'width: 250px' } %>
  <%= f.input :password, :input_html => {:style=> 'width: 250px'} %>
  <%= f.input :remember_me, as: :boolean %>


  <div class="form-actions">
    <%= f.submit "Sign in" , class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
