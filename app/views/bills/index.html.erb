<h1> Your Properties Bills: </h1>

<table class="table table-striped" border="0" style="width:100%">
	<tr>
		<th>ID#</th>
		<th>Due Date</th>
		<th>Bill Type</th>
		<th>Status</th>
		<th>Amount Due</th>
		<th>Action</th>
	</tr>
	<% count = 1%>
	<% @bills.each do |b| %>
	<% if  b.status == "Unpaid" and b.duedate < Time.zone.now %>
		<tr class="danger">
			<td><%= count %></td>
			<td><%= b.duedate %></td>
			<td><%= b.billtype %></td>
			<td><%= b.status %></td>
			<td><%= b.amount %></td>
			<td>
				<div class="btn-group btn-group-xs" role="group" aria-label="...">
				  <button type="button" class="btn btn-default"><%= link_to "View", b %></button>
				  <button type="button" class="btn btn-default"><%= link_to "Edit", edit_bill_path(b)%></button>
				  <button type="button" class="btn btn-default"><%= link_to "Delete", bill_path(b), method: :delete, data: { confirm: "Are you sure you want to delete this bill?" }%></button>
				</div>
			</td>
			<% count+=1 %>
		</tr>
	<% else %>
	<tr>
		<td><%= count %></td>
		<td><%= b.duedate %></td>
		<td><%= b.billtype %></td>
		<td><%= b.status %></td>
		<td><%= b.amount %></td>
		<td>
			<div class="btn-group btn-group-xs" role="group" aria-label="...">
			  <button type="button" class="btn btn-default"><%= link_to "View", b %></button>
			  <button type="button" class="btn btn-default"><%= link_to "Edit", edit_bill_path(b)%></button>
			  <button type="button" class="btn btn-default"><%= link_to "Delete", bill_path(b), method: :delete, data: { confirm: "Are you sure you want to delete this bill?" }%></button>
			</div>
		</td>
		<% count+=1 %>
	</tr>
	<% end %>
<% end %>
</table>

